
<main class="">
    <div class="container col-xl-10 col-xxl-8 px-4 py-5">
      <div class="pt-5 pb-5">
        <h1>Restaurants</h1>
        <p>Restaurants near Korea National University of Transportation.</p>
  
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% restaurants .forEach(restaurant => { %>
            <tr>
              <td>
                <a href="<%= `/restaurants/${restaurant._id}` %>">
                  <%= restaurant.title %>
                </a>
              </td>
              <td><%= restaurant.description %></td>
              <td>
                <a href="<%=`restaurants/${restaurant._id}/edit`%>"> Edit </a>
              </td>
              <td>
                <a
                  href="<%= `restaurants/${restaurant._id}/delete?_method=DELETE` %>"
                  onclick="return confirm('Are you sure you want to delete this record?')"
                  a
                  >Delete</a
                >
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
  
        <div class="mt-5 text-center">
          <a href="/restaurants/new" class="btn btn-primary">Add New Restaurant</a>
          <a
            href="/"
            class="btn ut-red disabled"
            role="button"
            aria-disabled="true"
            >Delete All Restaurants</a
          >
        </div>
      </div>
    </div>
  </main>
  